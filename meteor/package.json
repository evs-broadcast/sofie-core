	"lint-staged": {
		"*.{css,json,md,scss}": [
			"yarn prettier"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw"
		]
	},
	"meteor": {
		"mainModule": {
			"client": "client/main.tsx",
			"server": "server/main.ts"
		},
		"nodeModules": {
			"recompile": {
				"@mos-connection/helper": "legacy",
				"@mos-connection/model": "legacy",
				"@sofie-automation/corelib": "legacy",
				"@sofie-automation/shared-lib": "legacy"
			}
		}
	},
	"standard-version": {
		"scripts": {
			"postbump": "yarn libs:syncVersionsAndChangelogs && yarn install && git add yarn.lock"
		}
	},
